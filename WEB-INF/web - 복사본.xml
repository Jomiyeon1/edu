<servlet>
		<servlet-name>LoginBeanInitParam</servlet-name>
		<servlet-class>jw04.LoginBeanInitParam</servlet-class>
		<init-param>
		<param-name>jdbcDriver</param-name>
		<param-pattern>oracle.jdbc.driver.OracleDriver</param-pattern>
		</init-param>

		<init-param>
		<param-name>jdbcURL</param-name>
		<param-pattern>jdbc:oracle:thin:@127.0.0.1:1521:xe</param-pattern>
		</init-param>

		<init-param>
		<param-name>jdbcUSER</param-name>
		<param-pattern>scott</param-pattern>
		</init-param>

		<init-param>
		<param-name>jdbcPasswd</param-name>
		<param-pattern>tiger</param-pattern>
		</init-param>

	</servlet>


	<servlet>
		<servlet-name>LoginBeanInitParam</servlet-name>
		<url-pattern>/LoginBeanInitParam</url-pattern>
	</servlet>

